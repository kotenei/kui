{
  "compilerOptions": {
    "moduleResolution": "node", // 如何解析模块:'node' (Node.js) or 'classic' (TypeScript pre-1.6)
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true, // 启动装饰器
    "esModuleInterop": true,
    "module": "commonjs", // 指定用什么模板生成
    "declaration": true, // 生成相应的 .d.ts文件
    "jsx": "react", // 在 .tsx文件里支持JSX："React","react-native"或 "Preserve"
    "target": "es5", // 将目标编译为 es5
    "lib": ["dom", "es6", "es7"], // 编译过程中需要引入的库文件的列表
    "rootDirs": ["src"], // 入口文件
    "allowJs": true, // 允许编译javascript文件
    "outDir": "lib", // 输出目录
    "importHelpers": true
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules"]
}
