{
  "compilerOptions": {
    "sourceMap": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": ["es2017", "dom", "es6", "es7"],
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "kui-react": ["src"]
    }
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules"]
}
