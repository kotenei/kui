{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "target": "es6",
    "lib": ["dom", "es6", "es7"],
    "rootDirs": ["src"],
    "allowJs": true,
    "outDir": "lib"
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules"]
}
